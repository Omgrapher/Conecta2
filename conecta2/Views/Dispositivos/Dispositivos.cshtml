@{
    Layout = "_Layout";
    ViewData["Title"] = "Mis Iconos";
}

<div class="container mt-5 shadow-sm p-3 rounded"">
    <div class="row justify-content-center">
        <h2 class="text-center mb-4">Primer Dispositivo</h2>
        <div class="col-md-3">
            <div class="card text-center border border-danger shadow-danger" style="cursor: pointer;" onclick="toggleFoco(1, false)">
                <div class="card-body">
                    <i class="bi bi-plug" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Apagado</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border" style="cursor: pointer;" onclick="toggleFoco(1, true)">
                <div class="card-body">
                    <i class="bi bi-plug-fill" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Encendido</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 shadow-sm p-3 rounded">
    <div class="row justify-content-center">
        <h2 class="text-center mb-4">Segundo Dispositivo</h2>
        <div class="col-md-3">
            <div class="card text-center border border-danger shadow-danger" style="cursor: pointer;" onclick="toggleFoco(2, false)">
                <div class="card-body">
                    <i class="bi bi-plug" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Apagado</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border" style="cursor: pointer;" onclick="toggleFoco(2, true)">
                <div class="card-body">
                    <i class="bi bi-plug-fill" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Encendido</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 shadow-sm p-3 rounded">
    <div class="row justify-content-center">

        <h2 class="text-center mb-4">Cuarto Dispositivo</h2>
        <div class="col-md-3">
            <div class="card text-center border border-danger shadow-danger" style="cursor: pointer;"  id="btnApi1">

                <div class="card-body">
                    <i class="bi bi-plug" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Apagado</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">

            <div class="card text-center border" style="cursor: pointer;"  id="btnApi2">

                <div class="card-body">
                    <i class="bi bi-plug-fill" style="font-size: 4rem;"></i>
                    <h5 class="card-title mt-3">Encendido</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        // Evento del botón para consumir API 1
        $('#btnApi1').click(function () {
            $.ajax({
                url: '@Url.Action("ConsumirApi1", "Dispositivos")',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Error al intentar consumir API 1.");
                }
            });
        });

        // Evento del botón para consumir API 2
        $('#btnApi2').click(function () {
            $.ajax({
                url: '@Url.Action("ConsumirApi2", "Dispositivos")',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Error al intentar consumir API 2.");
                }
            });
        });

    });
</script>

